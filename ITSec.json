{
"Parameters" :
           {
           "GroupName" : 
		          {
                         "Type" : "String"
			      }
	    	},
	    "Resources":
         {
             "IAMGroup":
                 {
                         "Type": "AWS::IAM::Group",
						 "Properties":{
						           "GroupName":{"Ref":"GroupName"}
								   }
},
            "IamPolicy": 
			     {
                         "Type" : "AWS::IAM::Policy",
                         "Properties" : 
						     { 
                                  "Groups" : [ {"Ref": "IAMGroup"} ],
                                  "PolicyDocument" :
								         {
                                             "Version": "2012-10-17",
                                             "Statement":  [
                                                     {
                                                           "Effect": "Allow",
                                                           "Action": [
                                                           "rds:*",
                                                           "s3:*",
                                                           "cloudtrail:*",
                                                           "cloudformation:*",
                                                           "dynamodb:*",
                                                           "codebuild:*",
                                                           "glue:*",
                                                            "iam:*",
                                                            "codecommit:*",
                                                            "cloudfront:*",
                                                            "cloudwatch:*",
                                                            "waf:*",
                                                            "codedeploy:*",
                                                            "route53:*",
                                                            "lambda:*",
                                                            "ec2:*",
                                                            "codepipeline:*",
                                                            "kinesis:*",
                                                            "elasticmapreduce:*",
                                                            "acm:*"
                                                                           ],
                                             "Resource": "*"
                }
         ]
 },
                                     "PolicyName" : "ITSecuritySpecialistPolicy"
              }
         }  
     }
}
